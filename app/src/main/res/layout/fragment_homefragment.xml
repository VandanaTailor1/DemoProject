<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homefragment">

  <ImageView
      android:layout_width="200dp"
      android:layout_height="290dp"
        android:src="@drawable/kpic"
      android:id="@+id/pic1"
   />
     <TextView
         android:layout_width="100dp"
         android:layout_height="wrap_content"
       android:text="In this step we open xml
        file and then create custom layout of four
        buttons by using two Linear Layout’s and
        then place the both layout’s inside Relativ
        e Layout one after another by using  different p
        roperties of Relative Layout"
         android:layout_alignParentRight="true"
       />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="290dp"
        android:src="@drawable/kpic1"
        android:layout_marginTop="9dp"
      android:layout_below="@+id/pic1"
        android:id="@+id/pic2"
       />
</RelativeLayout>